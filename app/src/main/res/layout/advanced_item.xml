<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/purple_200">

    <ImageView
        android:id="@+id/mountain_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_mountain" />

    <TextView
        android:id="@+id/mountain_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:text="Matterhorn"
        app:layout_constraintStart_toEndOf="@id/mountain_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/mountain_name"
        app:layout_constraintStart_toStartOf="@id/mountain_name"
        android:id="@+id/mountain_height_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4478m" />
</androidx.constraintlayout.widget.ConstraintLayout>